<%= render @article %>

<h3><%= pluralize @article.comments.count, "comment" %></h3>

<div id="comments">
  <%= render @article.comments %>
</div>

<h3>Add your comment</h3>

<%= form_for [@article, Comment.new] do |f| %>
  <div class="field">
    <%= f.label :content, "Comment" %><br />
    <%= f.text_area :content, :rows => 6 %>
  </div>
  <div class="action">
    <%= f.submit "Add comment" %>
  </div>
<% end %>
